#
# test utilities
#
# the sample data are taken from the simulated structure in testing
#

test_util:
	$(call anrem-warn, Entering util.test...)
# anrem-optarg
	$(call anrem-assert-eq, Single optarg, $(call anrem-optarg, foo, bar), foo)
	$(call anrem-assert-eq, List optarg, $(call anrem-optarg, foo baz foo, bar), foo baz foo)
	$(call anrem-assert-eq, Null optarg single default, $(call anrem-optarg,$(NULL), bar), bar)
	$(call anrem-assert-eq, Null optarg list default, $(call anrem-optarg,$(NULL), bar baz foo), bar baz foo)
	$(call anrem-assert-eq, Null optarg Null default,$(call anrem-optarg,$(NULL),$(NULL)),$(NULL))
# anrem-list-reverse
	$(call anrem-assert-eq-list, Reverse list no reps, $(call anrem-list-reverse, e1 e2 e3 e4 e5), e5 e4 e3 e2 e1)
	$(call anrem-assert-eq-list, Reverse list reps, $(call anrem-list-reverse, a b c a b), b a c b a)
	$(call anrem-assert-eq-list, Reverse list badchars, $(call anrem-list-reverse, a/%  b./ c//_    a-_/ b@--),\
		b@-- a-_/ c//_ b./ a/%)
